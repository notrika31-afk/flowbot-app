model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  phone         String?
  emailVerified DateTime?
  image         String?

  // × ×ª×•× ×™ ×× ×•×™ (SaaS)
  plan             UserPlan  @default(FREE)
  stripeCustomerId String?
  subscriptionId   String?
  subscriptionEnd  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ×§×©×¨×™×
  bots            Bot[]
  wabaConnections WabaConnection[]
  hostedNumbers   HostedNumber[]
  integrations    IntegrationConnection[]
  sessions        Session[]
  mfaCodes        MfaCode[]
  accounts        Account[]
}

enum UserPlan {
  FREE
  PRO
  BUSINESS
}

// ---------------------------------------------------------
// ğŸ¤– ×˜×‘×œ×ª ×‘×•×˜×™×
// ---------------------------------------------------------
model Bot {
  id          String  @id @default(cuid())
  name        String
  description String?
  ownerId     String
  isActive    Boolean @default(true)

  // === ×”×’×“×¨×•×ª AI ===
  systemPrompt String? @db.Text // ×”×”×•×¨××” ×”×¨××©×™×ª ×œ-AI
  aiModel      String  @default("gpt-4-turbo")
  temperature  Float   @default(0.7)

  // === ×©×“×” ×¡×˜×˜×•×¡ ===
  status String @default("DRAFT")

  webhookUrl String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  // ×¨×›×™×‘×™ ×”×‘×•×˜
  flows    Flow[]
  messages Message[]
  contacts Contact[]
  sessions ConversationSession[]

  // ×××’×¨ ×™×“×¢
  knowledgeSources KnowledgeSource[]

  // ×—×™×‘×•×¨×™×
  wabaConnection WabaConnection?
  hostedNumber   HostedNumber?

  // ğŸ”— ××™× ×˜×’×¨×¦×™×•×ª ××—×•×‘×¨×•×ª ×œ×‘×•×˜ ×”×–×”
  integrations   IntegrationConnection[]

  @@index([ownerId])
}

// ---------------------------------------------------------
// ğŸ§  ×˜×‘×œ×ª ××§×•×¨×•×ª ×™×“×¢ (Knowledge Base)
// ---------------------------------------------------------
model KnowledgeSource {
  id    String @id @default(cuid())
  botId String
  type  String // FILE, URL, TEXT
  name  String // ×©× ×”×§×•×‘×¥ ××• ×”×›×•×ª×¨×ª

  // ×ª×•×›×Ÿ ×•××™×§×•×
  content   String? @db.Text
  sourceUrl String?
  vectorId  String?

  // ×¡×˜×˜×•×¡ ×”×¢×™×‘×•×“
  status   KnowledgeStatus @default(PENDING)
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
}

enum KnowledgeStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}

// ---------------------------------------------------------
// ğŸ”€ ×˜×‘×œ×ª Flow â€” ×ª×¡×¨×™×˜×™×
// ---------------------------------------------------------
model Flow {
  id             String  @id @default(cuid())
  botId          String
  name           String  @default("×ª×¡×¨×™×˜ ×¨××©×™")
  triggerKeyword String?

  // Nodes & Edges (React Flow)
  nodes Json

  isPublished Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
}

// ---------------------------------------------------------
// ğŸ‘¥ ×× ×©×™ ×§×©×¨ / ×œ×™×“×™×
// ---------------------------------------------------------
model Contact {
  id        String   @id @default(cuid())
  botId     String
  name      String?
  phone     String
  tags      String[]
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bot      Bot       @relation(fields: [botId], references: [id], onDelete: Cascade)
  messages Message[]

  @@unique([botId, phone])
  @@index([botId])
}

// ---------------------------------------------------------
// ğŸ’¬ ×œ×•×’ ×”×•×“×¢×•×ª
// ---------------------------------------------------------
model Message {
  id        String           @id @default(cuid())
  botId     String
  contactId String?
  direction MessageDirection
  type      MessageType      @default(TEXT)
  content   String
  status    MessageStatus    @default(SENT)
  metadata  Json?
  createdAt DateTime         @default(now())

  bot     Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  contact Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)

  @@index([botId])
  @@index([contactId])
}

enum MessageDirection {
  INCOMING
  OUTGOING
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  DOCUMENT
  AUDIO
  LOCATION
  INTERACTIVE
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

// ---------------------------------------------------------
// ğŸ’¬ Session ×˜×›× ×™ (×›×•×œ×œ ×¡×™××•×œ×¦×™×”)
// ---------------------------------------------------------
model ConversationSession {
  id          String  @id @default(cuid())
  botId       String
  userPhone   String
  currentNode String?
  variables   Json?

  isSimulation Boolean @default(false)

  status    SessionStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
  @@index([userPhone])
}

enum SessionStatus {
  ACTIVE
  COMPLETED
  EXPIRED
}

// ---------------------------------------------------------
// ğŸ“² ×—×™×‘×•×¨×™× ×•××™× ×˜×’×¨×¦×™×•×ª
